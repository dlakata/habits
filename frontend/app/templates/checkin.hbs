{{#if habits}}
  <h1>Continue your habits!</h1>
  {{#each habits as |habit| }}
    <h3 class="checkin-title">Did you {{habit.title}}?</h3>
    <div class="checkin-button-group">
      <button type="button" class="checkin-button">Yes</button>
      <button type="button" class="checkin-button">No</button>
      <button type="button" class="checkin-button">Maybe</button>
    </div>
  {{/each}}
{{else}}
  <img class="checkin-check" src="check.png">
  <h1 class="checkin-good-title">Looks good!</h1>
  <p class="checkin-good-subtitle">All set for now!</p>
{{/if}}
