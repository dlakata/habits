<h1>{{model.title}}</h1>

<form class="habit-form form-horizontal">
  <div class="form-group">
    <label class="detail-label" for="title">Title</label>
    <div class="form-col">
      <input id="title" type="text" class="form-control" value="{{model.title}}">
    </div>
  </div>
  <div class="form-group">
    <label class="detail-label" for="description">Description</label>
    <div class="form-col">
      <input id="description" type="text" class="form-control" value="{{model.description}}">
    </div>
  </div>
  <div class="form-group">
    <button type="submit" class="save-button">Save changes</button>
  </div>
</form>

<hr>

<div class="habit-stats">
  <div class="habit-box">
    <p class="stat-title">Next Reminder</p>
    <p class="stat-value">12</p>
    <p class="stat-subtitle">days</p>
  </div>
  <div class="habit-box">
    <p class="stat-title">Percent Done</p>
    <p class="stat-value">{{percentage model}}%</p>
  </div>
  <div class="progress">
    <div class="progress-bar" role="progressbar" aria-valuenow="{{model.time}}"
         aria-valuemin="0" aria-valuemax="{{model.goal}}" style="width: {{percentage model}}%;">
      {{model.time}} days
    </div>
  </div>
</div>
