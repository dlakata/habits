<h1>Add a new habit</h1>

<form class="habit-form form-horizontal col-md-8">
  <div class="form-group">
    <label class="detail-label" for="title">Title</label>
    <div class="form-col">
      {{input id="title" type="text" class="form-control" value=title}}
    </div>
  </div>
  <div class="form-group">
    <label class="detail-label" for="description">Description</label>
    <div class="form-col">
      {{input id="description" type="text" class="form-control" value=description}}
    </div>
  </div>
  <div class="form-group">
    <button {{action 'add-habit'}} type="submit" class="save-button">Save changes</button>
  </div>
</form>
